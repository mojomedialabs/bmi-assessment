<div id="page-info" class="in">
  <h2>Showing Survey: <%= @survey.title %></h2>
</div>
<div class="line"></div>
<div id="page-actions" class="in">
  <%= link_to "Edit Survey", edit_admin_survey_path(@survey) %><%= link_to "Delete Survey", admin_surveys_path(@survey), :method => :delete %>
</div>
<div class="in">
  <p><strong>Title:</strong> <%= @survey.title %></p>
  <p><strong>Description:</strong></p>
  <pre><%= @survey.description %></pre>
  <p><strong>Slug:</strong> <%= @survey.slug %></p>
  <p><strong>Display Order:</strong> <%= @survey.display_order %></p>
  <p><strong>Status:</strong>
  <%= case @survey.status
      when 0
        "Draft"
      when 1
        "Published"
      when 2
        "Awaiting Review"
      else
        "Unknown"
      end
  %></p>
  <p><strong>Created at:</strong> <%= @survey.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
  <p><strong>Last Updated at:</strong> <%= @survey.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
  <h3>Sections</h3>
  <% @survey.sections.each do |section| %>
    <p><strong><%= section.title %></strong></p>
    <p><strong>Description</strong></p>
    <pre><%= section.description %></pre>
    <ol>
      <% section.questions.each do |question| %>
        <li>
          <p><%= question.content %></p>
          <ol style="list-style-type: upper-alpha;">
            <% question.answers.each do |answer| %>
              <li><%= answer.content %></li>
            <% end %>
          </ol>
        </li>
      <% end %>
    </ol>
  <% end %>
</div>
<div id="toggle-debug" class="in">
  <span class="toggle-debug-text">Show Debug Info</span><span class="toggle-debug-text" style="display: none;">Hide Debug Info</span>
</div>
<div id="debug-info" class="in">
  <%= debug @survey %>
</div>