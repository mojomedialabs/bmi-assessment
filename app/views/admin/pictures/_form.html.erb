<div id="page-info" class="in">
  <h2><%= legend %></h2>
</div>
<div class="line"></div>
<div class="in">
  <% unless @picture.new_record? %>
    <%= link_to image_tag(@picture.image_url(:thumb).to_s), @picture.image_url.to_s %>
  <% end %>
  <%= form_for [:admin, @picture], :html => { :multipart => true } do |f| %>
    <fieldset>
      <p>
        <%= f.label :title, "Title:" %><br />
        <%= f.text_field :title, :class => "small" %>
      </p>
      <p>
        <%= f.label :alt_text, "Alt Text:" %><br />
        <%= f.text_field :alt_text, :class => "small" %>
      </p>
      <p>
        <%= f.label :caption, "Caption:" %><br />
        <%= f.text_field :caption, :class => "small" %>
      </p>
      <p>
        <% if @picture.new_record? %>
          <%= f.file_field :image, :multiple => true, :accept => "image/jpeg,image/gif,image/png,image/tiff,image/svg+xml" %>
        <% else %>
          <%= f.file_field :image, :accept => "image/jpeg,image/gif,image/png,image/tiff,image/svg+xml" %>
        <% end %>
      </p>
      <p>
        <%= submit_tag "Submit" %>
      </p>
    </fieldset>
  <% end %>
</div>
