<div class="section">
  <div class="display-order">
    <%= image_tag image_path("icons/32x32/up.png"), :alt => "Move Up", :class => "increase-display-order", :title => "Move Up" %><%= image_tag image_path("icons/32x32/down.png"), :alt => "Move Down", :class => "decrease-display-order", :title => "Move Down" %>
    <%= f.hidden_field :display_order, :class => "display-order-field" %>
  </div>
  <div class="remove">
    <%= image_tag image_path("icons/32x32/remove.png") %>
    <%= f.hidden_field :_destroy, :alt => "Remove Section", :class => "remove-field", :title => "Remove Section" %>
  </div>
  <h3>Survey Section</h3>
  <p>
    <%= f.label :title, "Section Title" %><br />
    <%= f.text_field :title, :class => "small" %>
  </p>
  <p>
    <%= f.label :description, "Description:" %><br />
    <%= f.text_area :description, :class => "large" %>
  </p>
  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>
  <div>
    <%= link_to_add_fields "Add Question", f, :questions %>
  </div>
  <%= f.fields_for :results do |builder| %>
    <%= render "result_fields", :f => builder %>
  <% end %>
  <div style="margin-top: 10px;">
    <%= link_to_add_fields "Add Result to Section", f, :results %>
  </div>
</div>