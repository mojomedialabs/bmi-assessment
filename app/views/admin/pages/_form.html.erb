<div id="page-info" class="in">
  <h2><%= legend %></h2>
</div>
<div class="line"></div>
<div class="in">
  <%= form_for [:admin, @page] do |f| %>
    <fieldset>
      <p>
        <%= f.label :title, "Title:" %><br />
        <%= f.text_field :title, :class => "small" %>
      </p>
      <p>
        <%= f.label :body, "Body:" %><br />
        <%= f.text_area :body, :class => "large" %>
      </p>
      <div>
        <button id="picture-selector-button" name="picture-selector-button">Select Picture</button>
      <div>
      <p>
        <%= f.label :style, "Style:" %><br />
        <%= f.text_area :style, :class => "large" %>
      </p>
      <p>
        <%= f.label :meta_description, "Meta Description:" %><br />
        <%= f.text_area :meta_description, :class => "large" %>
      </p>
      <p>
        <%= f.label :meta_keywords, "Meta Keywords:" %><br />
        <%= f.text_area :meta_keywords %>
      </p>
      <p>
        <%= f.label :parent_id, "Parent Page:" %><br />
        <%= f.collection_select :parent_id, HierarchySorter.new(Page.all).sorted_array, :id, :get_dropdown_title, {}, :include_blank => "Please Select", :class => "small" %>
      </p>
      <p>
        <%= f.label :status, "Status:" %><br />
        <%= f.select :status, [['Published', 1], ['Draft', 0], ['Awaiting Review', 2]], {}, :class => "small" %>
      </p>
      <p>
        <label for="page_private"><%= f.check_box :private, {}, 1, 0 %> Page is private.</label>
      </p>
      <p>
        <%= submit_tag "Submit" %>
      </p>
    </fieldset>
  <% end %>
</div>
